# ===========================================
# WebRelay Server - Environment Variables
# ===========================================
# Copy this file to .env and update values

# Redis Configuration (Required - shared with Relay Client)
REDIS_URL=your-redis-host:6379
REDIS_PASSWORD=your-secure-redis-password
REDIS_DB=0

# Stream Configuration
STREAM_NAME=webhook-stream
CONSUMER_GROUP=relay-group
DEAD_LETTER_QUEUE=webhook-dlq

# Admin Authentication (Required for dashboard access)
ADMIN_PASSWORD=your-secure-admin-password

# Realtime Service URL (for WebSocket connections)
# Use http://localhost:3004 for local development or your public domain for production
NEXT_PUBLIC_REALTIME_URL=http://localhost:3004

# Database (SQLite - auto-created)
DATABASE_URL=file:./db/webrelay.db

# Optional: Server Configuration
# PORT=3000
# NODE_ENV=production
