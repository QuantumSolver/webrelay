# ===========================================
# CRM Relay Client - Environment Variables
# ===========================================
# Copy this file to .env and update values
# This runs on your LOCAL/INTERNAL server

# Redis Configuration (Must match Relay Server)
REDIS_URL=your-redis-host:6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# Stream Configuration (Must match Relay Server)
STREAM_NAME=webhook-stream
CONSUMER_GROUP=relay-group
DEAD_LETTER_QUEUE=webhook-dlq

# Consumer Identity (Auto-generated if not set)
# Set this to identify your client in the dashboard
CONSUMER_NAME=relay-client-local

# Realtime Service URL (Public URL of the realtime service)
# For local development: http://localhost:3004
# For production: https://your-server.com (proxied through gateway)
REALTIME_URL=http://localhost:3004

# Client Configuration
CLIENT_PORT=3003
WORKER_COUNT=5
BATCH_SIZE=10
BLOCK_TIMEOUT=5000

# Logging
LOG_LEVEL=info
